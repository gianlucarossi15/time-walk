<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Disable Parquet logging completely -->
    <logger name="org.apache.parquet" level="OFF"/>

    <!-- Optionally silence other Hadoop/Parquet-related logs -->
    <logger name="org.apache.hadoop" level="ERROR"/>
    <logger name="parquet" level="OFF"/>

    <!-- Define a console appender for your app's own logs -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set your appâ€™s root log level -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
